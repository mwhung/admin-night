
# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres.[PROJECT_ID]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# Supabase (Auth & Realtime)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY="your-publishable-key-here"

# AI Provider (Task Clarification)
OPENAI_API_KEY="sk-your-openai-key"

# App URL
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Internal-only API access key (for trusted backend jobs/routes)
INTERNAL_API_KEY="replace-with-a-long-random-secret"

# Development Mock Auth (never enable this in production)
NEXT_PUBLIC_MOCK_AUTH="false"
NEXT_PUBLIC_MOCK_AUTH_USER_ID="mock-user-id"
NEXT_PUBLIC_MOCK_AUTH_USER_EMAIL="mock@example.com"
NEXT_PUBLIC_MOCK_AUTH_USER_NAME="Mock User"

# Optional feature flags
# Keep false for strict MVP scope alignment.
NEXT_PUBLIC_ENABLE_HISTORY_MARKERS="false"
ENABLE_COMMUNITY_REACTION_WRITES="false"

# Note: Google OAuth is configured directly in the Supabase Dashboard. 
# You no longer need AUTH_SECRET or GOOGLE_CLIENT_ID in the app environment.
